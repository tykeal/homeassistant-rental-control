root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.json]
indent_size = 2

[*.rst]
indent_size = 4

[*.md]
indent_size = 4
max_line_length = 80

[*.sh]
indent_size = 4
max_line_length = 80

[*.yaml]
indent_size = 2
max_line_length = 120
